.reviews-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.user {
  padding: 30px 0;
  margin: 0 30px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.data {
  padding: 40px 30px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.text {
  font-weight: 600;
  line-height: 1.88;
  color: rgba(65, 76, 99, 0.5);
  margin-bottom: 20px;
}

.btns {
  display: flex;
  justify-content: space-between;
}