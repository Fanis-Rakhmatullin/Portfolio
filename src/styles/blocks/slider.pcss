
.slider__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 41%;
  margin-bottom: 77px;
}

.slider__btns {
  width: 134px;
  display: flex;
  justify-content: space-between;
}

.slider__content {
  display: flex;
  justify-content: space-around;
  padding-right: 6%;
}

.slider__item {
  width: 32%;

  &:last-child {
    margin-right: 0;
  }
}

