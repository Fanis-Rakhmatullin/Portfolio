.works__container {
  @include phones {
    width: 100%;
  }
}

.works__title {
  margin-bottom: 82px;

  @include tablets {
    margin-bottom: 50px;
  }

  @include phones {
    text-align: center;
    margin-bottom: 27px;
  }
}

.works__content {
  padding-bottom: 60px;
  min-height: 590px;

  @include desktop {
    padding-bottom: 0;
  }

  @include tablets {
    min-height: 870px;
  }
}