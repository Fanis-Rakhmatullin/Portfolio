.welcome-section {
  /* background: url('~images/content/hero-bg.jpg') center top -100px / cover no-repeat; */
  background: url('~images/content/hero-bg.jpg') center top / cover no-repeat;
  padding-bottom: 130px;

  @include desktop {
    padding-bottom: 300px;
  }
  
  @include tablets {
    padding-bottom: 0;
  }

  @include phones {
    background: url('~images/content/hero-bg-phone.jpg') center top / cover no-repeat;
    padding-bottom: 160px;
  }
}

